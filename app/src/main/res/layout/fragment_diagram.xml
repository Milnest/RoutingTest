<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diagramFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.diagram.DiagramFragment">

    <Button
        android:id="@+id/button_on_diag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:textSize="20sp"
        android:text="@string/to_diag"
        android:transitionName="@string/diag_trans_button"/>

    <com.milnest.testapp.customview.CircleDiagramView
        android:id="@+id/diagram"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:padding="10dp"
        app:cd_value="0.55"
        app:cd_base_color="@color/colorGray_100"
        app:cd_base_color_line="@color/colorBlueGray_500"
        app:cd_second_color="@color/colorGray_300"
        app:cd_second_color_line="@color/colorBlueGray_900"
        app:cd_line_color="@color/colorBrown_200"
        app:cd_text_color="@color/colorBlack"
        app:cd_text_size="40sp"
        app:cd_h= "15dp"/>
</LinearLayout>

